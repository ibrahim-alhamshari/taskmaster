<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.MyApplication" >
        <activity
            android:name=".Authentication.ConfirmSignUp"
            android:exported="true"
            android:parentActivityName=".Authentication.SignUp"/>
        <activity
            android:name=".Authentication.SignUp"
            android:exported="true"
            android:parentActivityName=".Authentication.Registration"/>
        <activity
            android:name=".Authentication.Registration"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Tasks.TaskDetail"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Tasks.AddTask"
            android:exported="true"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" >
        </activity>
        <service
            android:exported="true"
            android:name=".PushListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".Tasks.AddTask"
            android:foregroundServiceType="location">
        <!-- Any inner elements would go here. -->
         </service>
        <activity
            android:name="com.amplifyframework.auth.cognito.activities.HostedUIRedirectActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="myapp" />
            </intent-filter>
        </activity>
    </application>
<!--    <uses-permission android:name="android.permission.CAMERA"/>-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
</manifest>